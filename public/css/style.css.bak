/* 添加iOS设备的优化 */
@supports (-webkit-touch-callout: none) {
  /* iOS设备特有的样式 */
  body {
    /* 防止iOS橡皮筋效果 */
    position: fixed;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
  
  .app-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
  }
  
  /* 防止iOS上输入框聚焦时页面缩放 */
  input[type="text"],
  input[type="password"],
  input[type="email"],
  input[type="number"],
  textarea {
    font-size: 16px !important;
  }
  
  /* iOS上改进滚动体验 */
  .modal-content {
    -webkit-overflow-scrolling: touch;
  }
}

/* 表情选择器样式 */
.emoji-picker {
  position: absolute;
  bottom: calc(100% + 10px);
  left: 0;
  width: 320px;
  background-color: white;
  border-radius: var(--border-radius);
  box-shadow: var(--box-shadow);
  z-index: 100;
  max-height: 300px;
  overflow-y: auto;
  border: 1px solid var(--gray-300);
  opacity: 1;
  transform: translateY(0);
  transition: opacity 0.2s ease, transform 0.2s ease, visibility 0.2s ease;
}

.emoji-picker.hidden {
  display: none !important;
  visibility: hidden !important;
  opacity: 0 !important;
  transform: translateY(10px) !important;
}

/* 移动设备表情选择器样式 */
@media (max-width: 768px) {
  .emoji-picker {
    width: 100%;
    max-height: 250px;
    position: fixed;
    bottom: 80px;
    left: 0;
    right: 0;
    border-radius: 12px 12px 0 0;
    box-shadow: 0 -5px 20px rgba(0, 0, 0, 0.1);
    z-index: 101;
  }
}

@media (max-width: 480px) {
  .emoji-picker {
    max-height: 40vh;
    bottom: 60px;
  }
}